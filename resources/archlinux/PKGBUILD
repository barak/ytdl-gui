# Maintainer: Antoine Impromptux <impromptux (a) mailo dot com>
pkgname=youtubedl-gui
_pkgname=ytdl-gui
pkgver=4.0
pkgrel=1
arch=('x86_64'
      'aarch64')
license=('GPL3')
pkgdesc="Download videos and audio from various sources(1000+) including YouTube."
source=("https://codeberg.org/impromptux/ytdl-gui/archive/3995875896652772a4caf83de9ad7e3279010ce8.zip")
sha256sums=('f732f1d3b4b586f211926c07a7468ea6a7768b6b3070c828548b9257998b21ac')
provides=("youtubedl-gui")
conflicts=("youtubedl-gui")
makedepends=("cmake")
depends=("yt-dlp"
         "qt6-base"
         "ffmpeg"
         "hicolor-icon-theme")

optdepends=("breeze: Better looking theme than default one")

build() {
        cd ${_pkgname}
        cmake -B build
        make -C build -j`nproc`
}

package() {
        cd ${_pkgname}
        make -C build DESTDIR="$pkgdir/" install
}
