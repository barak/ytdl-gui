# Maintainer: Antoine Impromptux <impromptux (a) mailo dot com>
pkgname=youtubedl-gui
_pkgname=ytdl-gui
pkgver=4.0
pkgrel=1
arch=('x86_64'
      'aarch64')
license=('GPL3')
pkgdesc="Download videos and audio from various sources(1000+) including YouTube."
source=("https://codeberg.org/impromptux/ytdl-gui/archive/v4.1.zip")
sha256sums=('259b2783cd69bdefb67f6416bfa2d18cdcb59fd060bab295763e16a24dd23e5c')
provides=("youtubedl-gui")
conflicts=("youtubedl-gui")
makedepends=("cmake")
depends=("yt-dlp"
         "qt6-base"
         "ffmpeg"
         "hicolor-icon-theme")

optdepends=("breeze: Better looking theme than default one")

build() {
        cd ${_pkgname}
        cmake -B build
        make -C build -j`nproc`
}

package() {
        cd ${_pkgname}
        make -C build DESTDIR="$pkgdir/" install
}
